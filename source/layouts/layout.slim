    script hljs.highlightAll();


    script src="https://cdnjs.cloudflare.com/ajax/libs/tocbot/4.30.0/tocbot.min.js"
    link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tocbot/4.30.0/tocbot.css"

  body
    div class="flex h-screen overflow-hidden"
      nav class="p-8 w-64 bg-gray-800 overflow-y-disable"
        = link_to "/index.html" do
          span class="font-serif text-2xl font-semibold whitespace-nowrap text-white" gaultier.dev
        div
          ul class="grid gap-4 mt-8 text-white"
            li = link_to "About", "/about"


      main class="flex-1 overflow-y-auto p-12 js-toc-content"
        = yield

